    <link rel="stylesheet" href="~/Templates/Frontend/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Templates/Frontend/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Templates/Frontend/css/nice-select.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/Templates/Frontend/css/bootstrap.css">
    <link rel="stylesheet" href="~/Templates/Frontend/css/main.css">
    <link rel="stylesheet" href="~/Templates/Frontend/css/template.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Frontend/css/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Frontend/css/owl.theme.default.min.css">
</head>
<body>
    <!-- Start Header Area -->
    <header class="default-header">
        <div class="container">
            <div class="header-wrap">
                <div class="header-top d-flex justify-content-between align-items-center">
                    <div class="logo">
                        <a href="#home"><img class="img-responsive" style="width: 45%" src="~/Templates/front.jpg" /></a>
                    </div>
                    <div class="main-menubar d-flex align-items-center">
                        <nav class="hide">
                            <a href="/">Home</a>
                            <a href="#causes">Causes</a>
                            <a href="#about">About</a>
                            <a href="#helpcentre">Help Centre</a>
                            <a href="#events">Events</a>
                            <a href="#partners">Partners</a>
                            @{
                                tbl_User user = (tbl_User)Session["User"];
                                if (user == null)
                                {
                                    user = new db_GiveAidProEntities1().tbl_User.FirstOrDefault(x => x.Email == User.Identity.Name);
                                }

                                if (user != null)
                                {

                                    if (user.FK_UserType == 1)
                                    {
                                        <a href="/AdminDash/Home/Index">Account</a>
                                    }
                                    else if (user.FK_UserType == 3)
                                    {
                                        <a href="/User/Home/Index">Account</a>
                                    }
                                }
                                else
                                {
                                    <a href="/Account/Login">Account</a>
                                }
                            }
                        </nav>
                        <div class="menu-bar"><span class="lnr lnr-menu"></span></div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header Area -->
    @RenderBody()
    <!-- start footer Area -->
    <footer class="footer-area section-gap">
        <div class="container">
            <div class="row d-flex flex-column justify-content-center">
                <ul class="footer-menu">
                    <li><a href="/">Home</a></li>
                    <li><a href="/Home/Contact">Contact</a></li>
                    <li><a href="/Home/About">About</a></li>
                    <li><a href="/User/Donation/Index">Donate</a></li>
                </ul>
                <p class="footer-text m-0">
                    Copyright &copy; @DateTime.Now.Year All rights reserved by <a href="/" target="_blank">Give Aid</a>
                </p>
            </div>
        </div>
    </footer>
    <!-- End footer Area -->
    <script src="~/Templates/Frontend/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/Templates/Frontend/js/vendor/bootstrap.min.js"></script>
