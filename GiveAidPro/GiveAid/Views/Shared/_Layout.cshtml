    <!-- Favicon-->
    <link rel="shortcut icon" href="~/Templates/Frontend/img/fav.png">
    <!-- Author Meta -->
    <meta name="author" content="Colorlib">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Charity</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    <!--
       CSS
       ============================================= -->
    <link rel="stylesheet" href="~/Templates/Frontend/css/linearicons.css">
