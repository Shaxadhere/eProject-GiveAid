@model GiveAid.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login - GiveAid</title>

    <link rel="stylesheet" href="~/Templates/Backend/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Templates/Backend/assets/vendor/fonts/circular-std/style.css">
    <link rel="stylesheet" href="~/Templates/Backend/assets/libs/css/style.css">
    <link rel="stylesheet" href="~/Templates/Backend/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>
<body>


    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center">
                <a href="/">
                    <img class="img-responsive" style="width: 40%" src="~/Templates/back.jpg" />
                </a>
                <br />
                @if (ViewBag.message != null)
                {
                    <span class="splash-description">@ViewBag.message</span>
                }
               
                <span class="splash-description">Please enter your credentials.</span>
                
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                   
                    <div class="form-group">
                        @Html.EditorFor(log => log.Email, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "username", @placeholder = "Email Address" } })
                        @Html.ValidationMessageFor(log => log.Email, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(log => log.Password, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "psername", @placeholder = "Password"} })
                        @Html.ValidationMessageFor(log => log.Password, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Log in</button>
                }
            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="/Account/Signup" class="footer-link">Create An Account</a>
                </div>
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="/" class="footer-link">Go to Home</a>
                </div>
            </div>
        </div>
    </div>




    <script src="~/Templates/Backend/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Templates/Backend/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');

    </script>
</body>

</html>
