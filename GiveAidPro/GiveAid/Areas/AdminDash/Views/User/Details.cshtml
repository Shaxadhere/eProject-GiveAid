@model GiveAid.Models.tbl_User

@{
    ViewBag.Title = "Detailed View";
    Layout = null;
}

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@ViewBag.Title</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 col-lg-12 col-md-6 col-sm-12 col-12">
                    <div class="card">
                        <img class="img-fluid" src="~/Templates/Frontend/img/@Html.DisplayFor(model => model.Picture)" alt="@Html.DisplayFor(model => model.FullName)">
                        <div class="card-body">
                            <h3 class="card-title">@Html.DisplayFor(model => model.FullName)</h3>
                            <p class="card-text">@Html.DisplayFor(model => model.Email)</p>
                            <p class="card-text">@Html.DisplayFor(model => model.tbl_UserType.UserTypeName)</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
               <button data-dismiss="modal" class="btn btn-outline-primary btn-sm">Close</button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#myModal').modal('show');
    });

</script>

