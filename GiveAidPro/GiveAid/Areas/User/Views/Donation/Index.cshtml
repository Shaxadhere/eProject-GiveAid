@{
    ViewBag.Title = "Donate Now";
}
<div class="card-body border-top">
    @if (@ViewBag.msg != null)
    {
        <h3 class="text-center">@ViewBag.msg</h3>
    }
    <h3 class="text-center">Donate Now</h3>
    <p class="text-center">We help people worldwide who are suffering from issues cause of poverty, it's been years we are struggling and working hard to provide
        proper education, food, clean water and many more life essentials, you can help by donating your part to show some support</p>
</div>
<section class="cd-timeline js-cd-timeline">
    <div class="cd-timeline__container">
       @foreach (var item in ViewBag.events)
       {
        <div class="cd-timeline__block js-cd-block">
            <div class="cd-timeline__img cd-timeline__img--picture js-cd-img">
                <img src="~/Templates/backend/assets/vendor/timeline/img/cd-icon-picture.svg" alt="Picture">
            </div>
            <div class="cd-timeline__content js-cd-content">
                <h3>@item.Title</h3>
                <p>@item.Description</p>
                <a href="/User/Donation/Create" class="btn btn-primary btn-lg">Donate Now</a>
                <span class="cd-timeline__date">@item.DateTime</span>
            </div>
        </div>
       }
    </div>
</section>